{
  "name": "bgm-tv-auto-tracker",
  "description": "auto tracker your bangumi progress",
  "version": "1.0.10",
  "author": {
    "name": "Trim21",
    "email": "trim21me@gmail.com"
  },
  "scripts": {
    "postversion": "npm run build && git add .",
    "anylize": "cross-env npm_config_report=true npm run build",
    "build": "cross-env NODE_ENV=production webpack --mode production --config config/webpack.config.js",
    "dev": "webpack --mode development --watch --config config/webpack.config.js",
    "lint": "eslint -c package.json --fix src"
  },
  "browserslist": [
    "last 2 version",
    "> 1%"
  ],
  "eslintIgnore": [
    "dist/*.js"
  ],
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "comma-dangle": [
        0
      ],
      "standard/no-callback-literal": [
        0
      ],
      "prefer-promise-reject-errors": [
        0
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Trim21/bilibili-bangumi-tv-auto-tracker"
  },
  "private": true,
  "devDependencies": {
    "@types/jquery": "^3.3.31",
    "autoprefixer": "^9.6.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.0.0",
    "eslint-config-standard": "^14.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.1",
    "hoek": "^4.2.1",
    "html-loader": "^0.5.5",
    "node-sass": "^4.12.0",
    "postcss-loader": "^2.1.6",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.21.0",
    "to-string-loader": "^1.1.5",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.3",
    "userscript-metadata-webpack-plugin": "^0.0.3",
    "vue-loader": "^15.7.1",
    "vue-style-loader": "^4.1.1",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.39.2",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.7",
    "webpack-livereload-plugin": "^2.2.0",
    "webpack-merge": "^4.1.3",
    "wrapper-webpack-plugin": "^1.0.0"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "axios-userscript-adapter": "^0.0.2",
    "jquery": "^3.3.1",
    "vue": "^2.5.16"
  }
}
