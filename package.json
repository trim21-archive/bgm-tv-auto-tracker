{
  "name": "bgm-tv-auto-tracker",
  "description": "auto tracker your bangumi progress",
  "version": "1.0.10",
  "author": {
    "name": "Trim21",
    "email": "trim21me@gmail.com"
  },
  "scripts": {
    "postversion": "npm run build && git add .",
    "anylize": "cross-env npm_config_report=true npm run build",
    "build": "cross-env NODE_ENV=production webpack --mode production --config config/webpack.config.js",
    "dev": "webpack --mode development --watch --config config/webpack.config.js",
    "lint": "eslint -c package.json src"
  },
  "browserslist": [
    "last 2 version",
    "> 1%"
  ],
  "eslintIgnore": [
    "dist/*.js"
  ],
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "comma-dangle": [
        0
      ],
      "standard/no-callback-literal": [
        0
      ],
      "prefer-promise-reject-errors": [
        0
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Trim21/bilibili-bangumi-tv-auto-tracker"
  },
  "private": true,
  "devDependencies": {
    "@types/jquery": "3.3.31",
    "autoprefixer": "9.7.3",
    "cross-env": "6.0.3",
    "css-loader": "3.2.0",
    "cssnano": "4.1.10",
    "eslint": "6.7.2",
    "eslint-config-standard": "14.1.0",
    "eslint-loader": "3.0.3",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "hoek": "6.1.3",
    "html-loader": "0.5.5",
    "node-sass": "4.13.0",
    "postcss-loader": "3.0.0",
    "sass-loader": "8.0.0",
    "style-loader": "1.0.1",
    "to-string-loader": "1.1.6",
    "ts-loader": "6.2.1",
    "typescript": "3.7.3",
    "uglifyjs-webpack-plugin": "2.2.0",
    "userscript-metadata-webpack-plugin": "0.0.3",
    "vue-loader": "15.7.2",
    "vue-style-loader": "4.1.2",
    "vue-template-compiler": "2.6.10",
    "webpack": "4.41.3",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-cli": "3.3.10",
    "webpack-livereload-plugin": "2.2.0",
    "webpack-merge": "4.2.2",
    "wrapper-webpack-plugin": "2.1.0"
  },
  "dependencies": {
    "axios": "0.19.0",
    "axios-userscript-adapter": "0.0.3",
    "jquery": "3.4.1",
    "vue": "2.6.10"
  }
}
